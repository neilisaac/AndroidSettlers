                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="@string/trade_zero"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:width="32dip" />

            <Button
